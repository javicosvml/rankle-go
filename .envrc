# Rankle Go - direnv configuration
# Automatically loads when entering this directory

# Use asdf for Go version management
use asdf

# Add Go binary directories to PATH
export PATH="/Users/javiercoscolla/.asdf/installs/golang/1.25.3/bin:$PATH"

# Set local GOPATH for isolated environment
export GOPATH=$PWD/.gopath
export GOBIN=$GOPATH/bin
export PATH=$GOBIN:$PATH

# Go build cache in project
export GOCACHE=$PWD/.gocache

# Module cache (optional - uses global by default)
# export GOMODCACHE=$GOPATH/pkg/mod

# Development environment variables
export GO111MODULE=on
export CGO_ENABLED=0

# Project-specific settings
export RANKLE_DEV=1
export RANKLE_LOG_LEVEL=debug

echo "âœ… Rankle Go environment activated"
echo "   GOPATH: $GOPATH"
echo "   GOBIN: $GOBIN"
echo "   Go version: $(go version | awk '{print $3}')"
